@{
    ViewBag.Title = "Импорт сотрудников из файла";
}

<h2>Импорт сотрудников</h2>

@using (Html.BeginForm("Import", "Accounts", null, FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h6>Для импорта сотрудников выбирете файл с расширением *.csv</h6>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
		<div class="form-group">
			<label for="accounts" class="control-label col-md-2">Файл для импорта сотрудников</label>
			<div class="col-md-10">
				<input type="file" name="accounts" id="accounts" class="form-control" accept=".csv" />
			</div>
		</div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Импорт сотрудников" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
