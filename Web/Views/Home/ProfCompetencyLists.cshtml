@{
	ViewBag.Title = "Список профессиональных компетеций";
}

<h2>@ViewBag.Title</h2>

<div class="pull-right">
	<button type="button" class="btn btn-default btn-create" data-toggle="modal" data-target="#createModal">Создать новую проф. компетенцию</button>
</div>

@foreach (string competencyList in ViewBag.CompetencyLists)
{
	<div>
		@Html.ActionLink(competencyList, "ProfCompetencyList", new { name = competencyList })
	</div>
	
}

@using (Html.BeginForm("CreateProfCompetencyList", "Home", FormMethod.Post))
{
	@Html.AntiForgeryToken()
	<div class="modal fade" tabindex="-1" role="dialog" id="createModal">
		<div class="modal-dialog" role="document">
			<div class="modal-content">
				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
					<h4 class="modal-title">Создание новой профессиональной компетенции</h4>
				</div>
				<div class="modal-body">
					<p>Пожалуйста, укажите функциональную область, для которой будет создана новая профессиональная компетенция</p>
					<input class="form-control text-box single-line" id="name" name="name" type="text">
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-default" data-dismiss="modal">Отмена</button>
					<input type="submit" class="btn btn-primary" value="OK">
				</div>
			</div>
		</div>
	</div>
}


@section scripts
{
	<script src="~/Scripts/jquery-1.10.2.min.js"></script>
	<script src="~/Scripts/bootstrap.min.js"></script>

	<script type="text/javascript">
		(function () {
		}());
	</script>
}

